<h2>You have <%= pluralize(@number, 'overdue card')%></h2>
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>picture</th>
      <th>original text</th>
      <th>translated text</th>
      <th>review date</th>
      <th colspan="3">links</th>
    </tr>
  </thead>
  <% @cards.each do |card| %>
  <tr>
    <td><%= card.picture? ? image_tag(card.picture.thumb.url) : "no" %></td>
    <td><%= card.original_text %></td>
    <td><%= card.translated_text %></td>
    <td><%= card.review_date.strftime("%d %m %Y") if card.review_date %></td>
    <td><%= link_to "show", card_path(card) %></td>
    <td><%= link_to "edit", edit_card_path(card) %></td>
    <td><%= link_to "delete", card_path(card),
                              method: :delete,
                              data: { confirm: "Are you sure"} %>
    </td>
  </tr>
  <% end %>
</table>
<%= link_to 'back', root_path %><br>
<%= link_to "new card", new_card_path %>
<%= %>
