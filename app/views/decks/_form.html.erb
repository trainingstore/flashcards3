<%= form_with(model: @deck) do |f| %>
  <% if deck.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(deck.errors.count, "error") %>
        prohibited this deck from being saved:
      </h2>
      <ul>
        <%= deck.errors.full_messages do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary form-control "%>
  </div>
<% end %>
<%= %>
