<h1>Decks</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Current</th>
      <th>Cards</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<tbody>
  <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.name %></td>
        <td><%= current_deck?(deck) %></td>
        <td><%= deck.cards.count %></td>
        <td><%= link_to "Show", deck %></td>
        <td><%= link_to "Edit", edit_deck_path(deck) %></td>
        <td><%= link_to "Destroy", deck, method: :delete,
                                   data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New Deck", new_deck_path %>
<%= %>
<%= render "select_current_deck" %>
